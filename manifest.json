{
    "manifest_version": 3,
    "name": "Ultimate Ad Blocker",
    "version": "1.0",
    "description": "Bloque efficacement les publicit√©s sur tous les sites web, y compris YouTube et Google Ads.",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_title": "Ultimate Ad Blocker"
    }
}
